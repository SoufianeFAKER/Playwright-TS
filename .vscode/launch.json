    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Playwright Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable":"npx",
            "runtimeArgs": ["playwrihght", "test", "${file}", "--project=chromium", "--headed", "--debug"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            // "env": {
            //     "DEBUG": "pw:api"
            // }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Lancer le programme",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\tests\\home.spec.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
            // ,
